/* 弹出层 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  z-index:1;
}
 
.modal-dialog {
  overflow: hidden;
  position: fixed;
  top: 15%;
  background: lemonchiffon;
  border-radius: 30rpx; 
  right: 5%;
  height: 800rpx;
  width: 90%;
  z-index: 2;
}
