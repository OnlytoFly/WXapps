/* pages/api2/api2.wxss */
page{
  display: flex;
  flex-direction: column;
  height:100%;
  min-height:100%;
  background: #00a2ff;
  color:#fff;
  font-family:"Microsoft YaHei";
  font-size:16px;
}

.navbar{
  flex: none;
  display: flex;
  background: rgb(38, 148, 199);
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #ffee00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}


.content{
  position:relative;
   padding-left:20rpx;
  padding-right:20rpx;
  height:100%;
}
.main-bg{
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
  min-height:100%;
  width:100%;
  height:100%;
  opacity:0.6;
}
.city{
  padding-top:50rpx;
  font-size:20px;
  font-family: 'KaiTi', Courier, monospace;
}
.future-container{
  margin-top:20rpx;
}
.future-item {
  width:355rpx;
  height:400rpx;
  display:inline-block;
  text-align:center;
}
.weather_image {
  display: flex;
  justify-content: center;
 }
 .weather_image image {
  width: 400rpx;
  height: 400rpx;
 }
.tabs{
  background:#0066ff67; 
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
 height: 1200rpx;
/*  opacity: 0.3; */
}
.normalWeather{
  display: flex;
  flex-direction: column;
  width: 45%;
  font-size: 18px;
}
.imageWeather{
  display: flex;
  flex-direction: row;
  height: 450rpx;

}
.weather001{
  display: flex;
  flex-direction: column;
  width: 50%;

}
.unNormalWeather{
  display: flex;
  flex-direction: row;
  height: 350rpx;

}
.okWeather1{
  font-family: KaiTi;
  font-size: 40px;
}
.okWeather2{
  font-family: KaiTi;
  font-size: 25px;
}
.tipso{
  background:#001aff8e; 
  border-bottom-left-radius: 5px;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
 height: 350rpx;
}
.tipsa{
  font-size: 22px;
  font-family: KaiTi;
  color: #ffee00;
}


